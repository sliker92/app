<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="authentication-popup">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Customer::account/authentication-header.phtml</argument>
            </action>
            <arguments>
<!--                <argument name="customer_view_model" xsi:type="object">BlueAcorn\HeaderFooter\Block\ViewModel\Customer</argument>-->
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                    <item name="authenticationPopup" xsi:type="array">
                        <item name="component" xsi:type="string">Magento_Customer/js/view/authentication-header</item>
                        <item name="children" xsi:type="array">
                            <item name="msp_recaptcha" xsi:type="array">
                                <item name="badge" xsi:type="string">bottomright</item>
                            </item>
                        </item>
                    </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <move element="authentication-popup" destination="header.container" before="header.navigation.desktop" />
    </body>
</page>
